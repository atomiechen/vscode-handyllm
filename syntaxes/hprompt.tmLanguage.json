{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "handyprompt",
	"patterns": [
		{
			"include": "#frontmatter"
		},
		{
			"include": "#block_yaml"
		},
		{
			"include": "#block_text"
		},
		{
			"include": "#plain_text"
		}
	],
	"repository": {
		"frontmatter": {
			"begin": "\\A---\\s*$",
			"end": "^---\\s*$",
			"beginCaptures": {
				"0": {
					"name": "entity.other.frontmatter.begin"
				}
			},
			"endCaptures": {
				"0": {
					"name": "entity.other.frontmatter.end"
				}
			},
			"contentName": "meta.frontmatter.block",
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"block_yaml": {
			"begin": "^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?type\\s*=[^{}]*})[^\\S\\r\\n]*$",
			"end": "(?=^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$)",
			"beginCaptures": {
				"0": {
					"name": "meta.block.start"
				},
				"1": {
					"name": "markup.heading"
				},
				"2": {
					"name": "meta.block.properties",
					"patterns": [
						{
							"include": "#extra_properties"
						}
					]
				}
			},
			"endCaptures": {
				"0": {
					"name": "meta.block.end"
				}
			},
			"contentName": "meta.block.yaml",
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"block_text": {
			"begin": "^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$",
			"end": "(?=^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$)",
			"beginCaptures": {
				"0": {
					"name": "meta.block.start"
				},
				"1": {
					"name": "markup.heading"
				},
				"2": {
					"name": "meta.block.properties",
					"patterns": [
						{
							"include": "#extra_properties"
						}
					]
				}
			},
			"endCaptures": {
				"0": {
					"name": "meta.block.end"
				}
			},
			"contentName": "meta.block.text",
			"patterns": [
				{
					"include": "text.html.markdown"
				}
			]
		},
		"extra_properties": {
			"patterns": [
				{
					"match": "(\\w+)\\s*=\\s*(\"[^\"]*\"|\\'[^\\']*\\')",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name"
						},
						"2": {
							"name": "string.quoted",
							"patterns": [
								{
									"match": "(?<=\")[^\"]*(?=\")",
									"name": "string.quoted.double"
								},
								{
									"match": "(?<=')[^']*(?=')",
									"name": "string.quoted.single"
								}
							]
						}
					}
				},
				{
					"match": "(?<=\\s|{|\\$)(tool|array)(?=\\s|}|$)",
					"name": "keyword"
				}
			]
		},
		"plain_text": {
			"match": ".",
			"name": "meta.plain-text"
		}
	},
	"scopeName": "source.hprompt"
}