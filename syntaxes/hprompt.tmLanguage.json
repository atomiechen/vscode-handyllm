{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "handyprompt",
	"patterns": [
		{
			"include": "#frontmatter"
		},
		{
			"include": "#block_yaml"
		},
		{
			"include": "#block_text"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"frontmatter": {
			"begin": "\\A---\\s*$",
			"end": "^---\\s*$",
			"beginCaptures": {
				"0": {
					"name": "entity.other.frontmatter.begin"
				}
			},
			"endCaptures": {
				"0": {
					"name": "entity.other.frontmatter.end"
				}
			},
			"contentName": "meta.frontmatter.block",
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"block_yaml": {
			"begin": "^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?type\\s*=[^{}]*})[^\\S\\r\\n]*$",
			"end": "(?=^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$)",
			"beginCaptures": {
				"0": {
					"name": "meta.block.yaml.start"
				},
				"1": {
					"name": "keyword.role"
				},
				"2": {
					"name": "meta.block.yaml.properties",
					"patterns": [
						{
							"include": "#extra_properties"
						}
					]
				}
			},
			"endCaptures": {
				"0": {
					"name": "meta.block.yaml.end"
				}
			},
			"contentName": "meta.block.yaml",
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"block_text": {
			"begin": "^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$",
			"end": "(?=^(\\$\\w+\\$)[^\\S\\r\\n]*({[^{}]*?})?[^\\S\\r\\n]*$)",
			"beginCaptures": {
				"0": {
					"name": "meta.block.text.start"
				},
				"1": {
					"name": "keyword.role"
				},
				"2": {
					"name": "meta.block.text.properties",
					"patterns": [
						{
							"include": "#extra_properties"
						}
					]
				}
			},
			"endCaptures": {
				"0": {
					"name": "meta.block.text.end"
				}
			},
			"contentName": "meta.block.text",
			"patterns": [
				{
					"include": "text.html.markdown"
				}
			]
		},
		"extra_properties": {
			"match": "(\\w+)\\s*=\\s*(\"[^\"]*\"|\\'[^\\']*\\')",
			"captures": {
				"1": {
					"name": "entity.other.attribute-name"
				},
				"2": {
					"name": "string.quoted",
					"patterns": [
						{
							"match": "(?<=\")[^\"]*(?=\")",
							"name": "string.quoted.double"
						},
						{
							"match": "(?<=')[^']*(?=')",
							"name": "string.quoted.single"
						}
					]
				}
			}
		},
		"comment": {
			"match": ".",
			"name": "comment.block"
		}
	},
	"scopeName": "source.hprompt"
}