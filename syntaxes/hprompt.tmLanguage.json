{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "handyprompt",
	"patterns": [
		{
			"include": "#frontmatter"
		},
		{
			"include": "#body"
		}
	],
	"repository": {
		"frontmatter": {
			"begin": "\\A",
			"end": "(?=^\\$\\w+\\$$)",
			"contentName": "meta.frontmatter",
			"patterns": [
				{
					"include": "#frontmatter-block"
				},
				{
					"include": "#frontmatter-comment"
				}
			]
		},
		"frontmatter-block": {
			"begin": "\\A---\\s*$",
			"end": "^---\\s*$",
			"beginCaptures": {
				"0": {
					"name": "entity.other.frontmatter.begin"
				}
			},
			"endCaptures": {
				"0": {
					"name": "entity.other.frontmatter.end"
				}
			},
			"contentName": "meta.frontmatter.block",
			"patterns": [
				{
					"include": "source.yaml"
				}
			]
		},
		"frontmatter-comment": {
			"begin": "(?<=\\A|(^---\\s*)$)",
			"end": "(?=^\\$\\w+\\$$)",
			"name": "comment.block"
		},
		"body": {
			"patterns": [
				{
					"include": "#role"
				},
				{
					"include": "#content"
				}
			]
		},
		"role": {
			"name": "markup.heading",
			"match": "^\\$\\w+\\$$"
		},
		"content": {
			"name": "meta.body.content",
			"begin": "(?<=^\\$\\w+\\$$)",
			"end": "(?=^\\$\\w+\\$$)"
		}
	},
	"scopeName": "source.hprompt"
}